{
	"semi": false,
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 120,
	"bracketSpacing": true,
	"singleQuote": true,
	"trailingComma": "none",
	"arrowParens": "avoid",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.spec.ts",
			"options": {
				"printWidth": 1000,
				"tabWidth": 4,
				"proseWrap": "never"
			}
		},
		{
			"files": "*.json",
			"options": {
				"printWidth": 80,
				"tabWidth": 4
			}
		},
		{
			"files": "*.yml",
			"options": {
				"printWidth": 80,
				"tabWidth": 4
			}
		}
	],
	"plugins": ["prettier-plugin-gherkin"]
}
